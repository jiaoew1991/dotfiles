root = true

[*]
indent_size = 4
end_of_line = LF
charset = utf-8
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[*.html]
indent_size = 2

[*.css]
indent_size = 2
[*.less]
indent_size = 2

[*.json]
indent_size = 2

[*.jade]
indent_size = 2

[*.scala]
indent_size = 2

[*.coffee]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
